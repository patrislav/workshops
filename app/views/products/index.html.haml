%h1 Listing products

%table
  %tr
    %th Title
    %th Description
    %th Price
    %th
    %th
    %th

  - products.each do |product|
    %tr
      %td= product.title
      %td= product.description
      %td= product.price
      %td= link_to 'Show', category_product_path(product.category, product)
      %td= link_to 'Edit', edit_category_product_path(product.category, product) if signed_in? and (product.user == current_user or current_user.admin?)
      %td= link_to 'Destroy', category_product_path(product.category, product), method: :delete, data: { confirm: 'Are you sure?' } if signed_in? and (product.user == current_user or current_user.admin?)

%br
